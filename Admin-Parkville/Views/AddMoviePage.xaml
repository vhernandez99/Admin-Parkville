<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:renderers="clr-namespace:Admin_Parkville.Renderers"
             mc:Ignorable="d"
             x:Class="Admin_Parkville.Views.AddMoviePage"
             BackgroundColor="#263A4F">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="15,20,15,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*" />
                        <ColumnDefinition Width="7*" />
                        <ColumnDefinition Width="1.5*" />
                    </Grid.ColumnDefinitions>
                    <Image Source="backicon.png"
                           HorizontalOptions="Start"
                           Grid.Column="0"
                           Aspect="AspectFit">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="ImgBack" Tapped="ImgBack_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Label Text="Agregar pelicula"
                           TextColor="White"
                           VerticalOptions="Start"
                           HorizontalOptions="Center"
                           FontSize="Title"
                           Grid.Column="1" />
                </Grid>
                <StackLayout Margin="0,10,0,0"
                             Spacing="4">
                    <Frame Padding="2"
                           HasShadow="False">
                        <renderers:BorderlessEntry x:Name="EntMovieName"
                                                   Placeholder="Nombre de pelicula"
                                                   TextColor="Black"
                                                   PlaceholderColor="#131C25" />
                    </Frame>
                    <Frame Padding="2"
                           HasShadow="False">
                        <renderers:BorderlessEntry x:Name="EntLanguage"
                                                   Placeholder="Idioma"
                                                   TextColor="Black"
                                                   PlaceholderColor="#131C25" />
                    </Frame>
                    
                    
                    
                    <Frame Padding="2"
                           HasShadow="False">
                        <renderers:BorderlessEntry x:Name="EntTicketPrice"
                                                   Placeholder="Precio"
                                                   Text="150"
                                                   TextColor="Black"
                                                   PlaceholderColor="#131C25" />
                    </Frame>
                    <Frame Padding="2"
                           HasShadow="False">
                        <renderers:BorderlessEntry x:Name="EntRating" 
                                                   Placeholder="Puntuacion"
                                                   TextColor="Black"
                                                   PlaceholderColor="#131C25" />
                    </Frame>
                    <Frame Padding="2"
                           HasShadow="False">
                        <renderers:BorderlessEntry x:Name="EntGenre"
                                                   Placeholder="Genero"
                                                   TextColor="Black"
                                                   PlaceholderColor="#131C25" />
                    </Frame>
                    <Frame Padding="2"
                           HasShadow="False">
                        <renderers:BorderlessEntry x:Name="EntTrailorUrl"
                                                   Placeholder="Trailer de youtube"
                                                   TextColor="Black"
                                                   PlaceholderColor="#131C25" />
                    </Frame>
                    <Frame Padding="2"
                           HasShadow="False">
                        <Editor x:Name="EdtDescription"
                                Placeholder="Breve descripcion de la pelicula"
                                HeightRequest="100"
                                TextColor="Black"
                                PlaceholderColor="#131C25" />
                    </Frame>
                    <Frame Padding="2"
                           HasShadow="False">
                        <renderers:BorderlessEntry x:Name="EntDuration"
                                                   Placeholder="Duracion 2h 25 min"
                                                   TextColor="Black"
                                                   PlaceholderColor="#131C25" />
                    </Frame>
                    <Frame Padding="2"
                           HasShadow="False">
                        <DatePicker x:Name="EntPlayingDate" TextColor="Black" />



                    </Frame>
                    <Frame Padding="2"
                           HasShadow="False">
                        <renderers:BorderlessEntry x:Name="EntPlayingTime"
                                                   Placeholder="Hora de funcion"
                                                   TextColor="Black"
                                                   PlaceholderColor="#131C25" />
                    </Frame>
                    <Frame Padding="2"
                           HasShadow="False">
                        <StackLayout Orientation="Horizontal">
                            <DatePicker x:Name="EntPlayingDate2" TextColor="Black" Date="0001-01-01 00:00:00.0000000" IsEnabled="False" />
                            <Button Text="Activar" HorizontalOptions="EndAndExpand" Clicked="Button_Clicked"></Button>
                        </StackLayout>
                    </Frame>
                    
                    <Frame Padding="2"
                           HasShadow="False">
                        <StackLayout Orientation="Horizontal">
                            <renderers:BorderlessEntry x:Name="EntPlayingTime2"
                                                   Placeholder="Hora de funcion"
                                                   TextColor="Black"
                                                   PlaceholderColor="#131C25"
                                                   IsEnabled="False"
                                                   Text="5:30 pm" />
                            <Button Text="Activar" HorizontalOptions="EndAndExpand" Clicked="Button_Clicked_1"></Button>
                        </StackLayout>
                    </Frame>
                    
                    <Frame Padding="2"
                           HasShadow="False">
                        <StackLayout Orientation="Horizontal">
                            <DatePicker x:Name="EntPlayingDate3" TextColor="Black" Date="01/01/0001" IsEnabled="False" />
                            <Button Text="Activar" HorizontalOptions="EndAndExpand" Clicked="Button_Clicked_2"></Button>
                        </StackLayout>
                    </Frame>
                    
                    <Frame Padding="2"
                           HasShadow="False">
                        <StackLayout Orientation="Horizontal">
                            <renderers:BorderlessEntry x:Name="EntPlayingTime3"
                                                   Placeholder="Hora de funcion"
                                                   TextColor="Black"
                                                   PlaceholderColor="#131C25"
                                                   IsEnabled="False" Text="5:30 pm"
/>
                            <Button Text="Activar" HorizontalOptions="EndAndExpand" Clicked="Button_Clicked_3"></Button>
                        </StackLayout>
                        
                    </Frame>
                    
                    <Frame Padding="2"
                           HasShadow="False">
                        <StackLayout Orientation="Horizontal">
                            <DatePicker x:Name="EntPlayingDate4" TextColor="Black" Date="01/01/0001" IsEnabled="False" />
                            <Button Text="Activar" HorizontalOptions="EndAndExpand" Clicked="Button_Clicked_4"></Button>
                        </StackLayout>
                    </Frame>
                    <Frame Padding="2"
                           HasShadow="False">
                        <StackLayout Orientation="Horizontal">
                            <renderers:BorderlessEntry x:Name="EntPlayingTime4"
                                                   Placeholder="Hora de funcion"
                                                   TextColor="Black"
                                                   PlaceholderColor="#131C25"
                                                   IsEnabled="False" Text="5:30 pm"/>
                            <Button Text="Activar" HorizontalOptions="EndAndExpand" Clicked="Button_Clicked_5"></Button>
                        </StackLayout>
                    </Frame>
                    <Frame Padding="2"
                           HasShadow="False">
                        <StackLayout Orientation="Horizontal">
                            <DatePicker x:Name="EntPlayingDate5" TextColor="Black" Date="01/01/0001" IsEnabled="False" />
                            <Button Text="Activar" HorizontalOptions="EndAndExpand" Clicked="Button_Clicked_6"></Button>
                        </StackLayout>
                    </Frame>
                    <Frame Padding="2"
                           HasShadow="False">
                        <StackLayout Orientation="Horizontal">
                            <renderers:BorderlessEntry x:Name="EntPlayingTime5"
                                                   Placeholder="Hora de funcion"
                                                   TextColor="Black"
                                                   PlaceholderColor="#131C25"
                                                   IsEnabled="False" Text="5:30 pm"/>
                            <Button Text="Activar" HorizontalOptions="EndAndExpand" Clicked="Button_Clicked_7"></Button>
                        </StackLayout>
                    </Frame>
                    <Image HorizontalOptions="End"
                           Aspect="Fill"
                           Margin="0,10,0,0"
                           HeightRequest="80"
                           WidthRequest="100"
                           x:Name="ImgMovie"
                           Source="uploadImage.png">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="TapPickImage" Tapped="TapPickImage_Tapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <Image Source="save.png"
                           Margin="0,10,0,0">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="ImgSave" Tapped="ImgSave_Tapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>