<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="adminUWP.Views.AddBannerImage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Background="Red">
                
                    <Image HorizontalOptions="End"
                           Aspect="Fill"
                           Margin="0,10,0,0"
                           HeightRequest="80"
                           WidthRequest="100"
                           x:Name="ImgMovie"
                           Source="uploadImage.png">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="TapPickImage" Tapped="TapPickImage_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Image Source="save.png"
                           Margin="0,10,0,0">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="ImgSave" Tapped="ImgSave_Tapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>